{
"GCC_make_file_template" : {
    "body": [
      "// CODE GENERATED BY THE ZENO IDE",
      "",
      "CC=gcc",
      "CFLAGS=-g",
      "SOURCES = $(wildcard path/to/src/folder/*.c)",
      "HEADERS = $(wildcard path/to/includes/*.h)",
      "OUTPUT_FOLDER=$(wildcard out/)",
      "OUTPUT_NAME=your_project_name.out",
      "",
      "make: $(HEADERS)",
      "  $(CC) $(CFLAGS) $(SOURCES) -o $(OUTPUT_FOLDER)\\\\$(OUTPUT_NAME)",
      "",
      "cln: ",
      "  -rm out/*.*"
    ]
  }
}